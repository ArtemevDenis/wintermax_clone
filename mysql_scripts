CREATE TABLE products (
ID MEDIUMINT NOT NULL AUTO_INCREMENT,
title VARCHAR(255) NOT NULL,
cost INT UNSIGNED NOT NULL,
type VARCHAR(100) NOT NULL,
description VARCHAR(1000) NOT NULL,
popular INT UNSIGNED NOT NULL,
PRIMARY KEY (ID));

