(2, 0),
(3, 1);

CREATE TABLE news (
ID MEDIUMINT NOT NULL AUTO_INCREMENT,
title VARCHAR(255) NOT NULL,
date VARCHAR(11) NOT NULL,
text MEDIUMTEXT NOT NULL, PRIMARY KEY (ID));

