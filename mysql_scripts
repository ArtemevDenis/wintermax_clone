CREATE TABLE usersSubscribe (
ID MEDIUMINT NOT NULL AUTO_INCREMENT,
userID MEDIUMINT NOT NULL,
isSubscribe TINYINT(1) default 0,
FOREIGN KEY (userID)  REFERENCES users (ID) ON DELETE CASCADE,
PRIMARY KEY (ID));

